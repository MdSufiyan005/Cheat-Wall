{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_DEBUG": "1",
        "DATABASE_URL": "mysql://<username>:<password>@<host>:3306/<database>",
        "PGUSER": "<username>",
        "PGPASSWORD": "<password>",
        "PGHOST": "<host>",
        "PGPORT": "3306",
        "PGDATABASE": "<database>"
      },
      "args": ["run", "--no-debugger", "--host=0.0.0.0", "--port=5000"]
    }
  ]
}
